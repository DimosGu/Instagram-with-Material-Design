<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/style_color_primary</item>
        <item name="android:colorPrimaryDark">@color/style_color_primary_dark</item>
        <item name="android:colorAccent">@color/style_color_accent</item>
    </style>

    <!-- 开始动画之前，要将CommentsActivity设置成半透明
        否则扩展动画会显示在窗口背景之上，而不是在View之上
        因为每个activity的窗口背景定义在所采用的主题中-->
    <style name="AppTheme.CommentActivity"
           parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!-- 上下文菜单 -->
    <style name="ContextMenuButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_context_menu</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>


</resources>
